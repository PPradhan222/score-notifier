<h1>Matches#index</h1>
<table style="width:100%">
  <h4>Toss: <%= @match.toss %></h4>
  <thead>
    <th>Teams</th>
    <th>Players</th>
  </thead>
  <tbody>
    <% @match.team_squads.each do |team_squad| %>
      <tr>
        <td><%= team_squad.team.name.titleize %></td>
        <td>
          <ul>
            <% team_squad.team_squad_members.each do |squad_member| %>
              <li><%= squad_member.player.web_profile_id.split("/").last.titleize %>(<%= squad_member.status %>)</li>
            <% end %>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>